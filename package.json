{
  "name": "electron-boilerplate",
  "productName": "Electron Boilerplate",
  "description": "The Craftable Writing Program",
  "version": "0.0.0",
  "author": "Ryestory",
  "homepage": "http://scribe.ryestory.com",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "Scribe",
    "asar": false,
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "directories": {
    "buildResources": "resources"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build --x64 --publish never",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "devDependencies": {
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "chai": "^3.5.0",
    "electron": "^1.4.7",
    "electron-builder": "^11.7.0",
    "electron-mocha": "^3.0.0",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.2",
    "gulp-batch": "^1.0.5",
    "gulp-concat": "^2.6.1",
    "gulp-less": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "istanbul": "^0.4.3",
    "mocha": "^3.0.2",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.4.2",
    "spectron": "^3.3.0",
    "yargs": "^6.6.0"
  },
  "dependencies": {
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "deepmerge": "^1.3.2",
    "draft-js": "^0.10.0",
    "fs-jetpack": "^0.10.5",
    "immutable": "^3.8.1",
    "interact.js": "^1.2.6",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-draft-wysiwyg": "^1.5.8",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0"
  }
}
